<hr>
<% if cheerup %>
  <%= link_to cheerup.user.email, users_profile_path(cheerup.user) %>
  <%= activity.action.sub(/e?$/, "ed") %> cheerup
  <%= link_to "#{activity.trackable.title} #{activity.trackable.sub_title}", cheerup if cheerup %>
  <% if activity.action == 'update' %>
    <%= distance_of_time_in_words(cheerup.updated_at, Time.zone.now) %> ago
    <br>
  <% else activity.action == 'create' %>
    <%= distance_of_time_in_words(cheerup.created_at, Time.zone.now) %> ago
    <br>
<% end %>
<% end %>
