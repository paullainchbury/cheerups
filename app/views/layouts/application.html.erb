<!DOCTYPE html>
<html>
<head>
  <title>Cheerupapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>

  <header style="width:100%; background-color: #efefef; height: 50px;">
    <div class="container sixteen columns" id="nav">
        <ul>
          <% if current_user %>
            <li><%=link_to "Flagged cheerups", flagged_cheerups_path if can? :flagged_cheerups, Cheerup %></li>
            <li><%= current_user.email %></li>
            <%= image_tag("#{current_user.image}" + '?type=small') if current_user.image %>
            <li><%= link_to 'logout', destroy_user_session_path, method: :delete %></li>

          <% else %>
            <li><%= link_to 'sign in', new_user_session_path %><li>
            <li><%= link_to 'register', new_user_registration_path %><li>
            <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %><li>

          <% end %>
        </ul>
      </div>
      <div id="notices">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
    </header>




  <div class="container" >

    <h2>Leaderboard</h2>
    <div id="sidebar" class="container five columns" style="display:inline-block" >
      <table>
        <tr>
          <td>Email</td>
          <td>Total Points</td>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.total_votes_received %></td>
        </tr>
        <% end %>
      </table>

      <h2>Activities</h2>
        <% @activities.each do |activity| %>
        <%= ActivityPresenter.new(activity, self).render_activity %>
        <% end %>
    </div>

    <div class="container eleven columns ">
      <%= yield %>
    </div>

  </div>
</body>
</html>
