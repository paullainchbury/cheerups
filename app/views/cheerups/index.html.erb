<h1>Cheerups</h1>


<%= flash[:notice] %>

<%= link_to 'New Cheerup', new_cheerup_path %>


<% @cheerups.each do |cheerup| %>
<div class="a_cheerup">
  <div id="the_canvas">
    <img class="the_image" src="<%= cheerup.image %>"/>
    <div id="main_text"><%= cheerup.title %></div>
    <div id="sub_text"><%= cheerup.sub_title %></div>
  </div>
  <div class="cheerup_author">Created by <%= cheerup.user.email %> <%= time_ago_in_words(cheerup.created_at) %> ago</div>
  <div class="facebook-image"><%= image_tag("#{cheerup.user.image}" + '?type=small') if cheerup.user.image %>
    <div class="voting"><%= link_to 'UpVote', vote_cheerup_path(cheerup, value: 1), method: "post" %>||<%= link_to 'DownVote', vote_cheerup_path(cheerup, value: -1), method: "post" %>|| <%= pluralize cheerup.votes, "vote" %> </div>
  <div class="actions"><%= link_to 'Edit', edit_cheerup_path(cheerup) %> | <%= link_to 'Delete', cheerup, method: :delete, data: { confirm: 'Are you sure?' } %> | <%= toggle_flag_button(cheerup, current_user) if current_user %></div>
  <div class="sharing"><button id="facebook_share">Share this on Facebook</button></div>
</div>
<% end %>

