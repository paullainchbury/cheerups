<%= form_for(@cheerup) do |f| %>
  <% if @cheerup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cheerup.errors.count, "error") %> prohibited this cheerup from being saved:</h2>

      <ul>
      <% @cheerup.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="the_canvas">
    <div id="the_image"></div>
    <!-- <img src='motivation2.png'> -->
    <div id="main_text">Main text</div>
    <div id="sub_text">Sub text blah blah blah</div>
  </div>

  <h2>Add your cheerup</h2>
  <label for"enter_main_text">Enter the main headline</label>
  <input id="enter_main_text"></input><br />
  <label for"enter_sub_text">Enter the sub line</label>
  <input id="enter_sub_text"></input>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :sub_title %><br />
    <%= f.text_field :sub_title %><br />
    <p>Characters left: <span id="counter">141</span></p>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
